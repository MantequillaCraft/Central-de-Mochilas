<style>
  
  
    .content {
    flex: 1;
    padding: 2rem;
  }

  .content-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
  }

  .content-header h2 {
      font-size: 1.5rem;
      color: #2c3e50;
  }
  h2 {
    margin-bottom: 20px;
  }
  
  .new-sale-button {
    background-color: #3498db;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    margin-bottom: 20px;

    text-decoration: none;
    font-weight: bold;
  }

    .add-btn {
      background-color: #3498db;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      cursor: pointer;
  }
  
  .table-section {
    margin-top: 20px;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
  }
  
  table th, table td {
    text-align: left;
    padding: 10px;
    border-bottom: 1px solid #ccc;
  }
  
  
</style>

<p style="color: green"><%= notice %></p>

 <div class="content-header">
  <h1>Suppliers</h1>
 <%= link_to new_reserve_or_purchase_path do %>
    <button class="add-btn">Agregar Proveedor</button>
  <% end %>

</div>

  <div class="table-section">
    <h3>Historial de Ventas</h3>
    <table>
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Total</th>
          <th>Cliente</th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <% @reserve_or_purchases.each do |reserve_or_purchase| %>
          <%= render reserve_or_purchase %>   
        </tr>
        
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>

