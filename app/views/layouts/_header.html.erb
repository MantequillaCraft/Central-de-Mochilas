
<style>
/* Navbar */
.navbar {
    background-color: #2c3e50;
    color: white;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.navbar-left h1 {
    font-size: 1.5rem;
}

.navbar-right {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logout-btn {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
}

/* Layout principal */
.main-container {
    display: flex;
    min-height: calc(100vh - 64px);
}

/* Sidebar */
.sidebar {
    width: 250px;
    background-color: white;
    border-right: 1px solid #ddd;
    padding: 1rem 0;
}

.sidebar ul {
    list-style: none;
}

.sidebar ul li a {
    display: block;
    padding: 1rem 2rem;
    color: #333;
    text-decoration: none;
    transition: background-color 0.2s;
}

.sidebar ul li a:hover {
    background-color: #f0f0f0;
    color: #3498db;
}

</style>
<header class="navbar">
  <div class="navbar-left">
    <h1>Backintrack</h1>
  </div>
  <div class="navbar-right">
    <% if Current.user %>
      <span><%= Current.user.username%></span>
    
    <%= button_to "Cerrar Sesión", session_path(Current.user.id), 
  method: :delete, 
  class: "logout-btn", 
  data: { turbo_confirm: "¿Estás seguro de que deseas cerrar sesión?" } %>
  <% else %>

    <% end %>
  </div>
</header>

