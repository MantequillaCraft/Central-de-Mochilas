<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :product_name, style: "display: block" %>
    <%= form.text_field :product_name %>
  </div>

  <div>
    <%= form.label :product_type, style: "display: block" %>
    <%= form.text_field :product_type %>
  </div>

  <div>
    <%= form.label :quantity_available, style: "display: block" %>
    <%= form.number_field :quantity_available %>
  </div>

  <div>
    <%= form.label :unit_price, style: "display: block" %>
    <%= form.text_field :unit_price %>
  </div>

  <div>
    <%= form.label :supplier_id, style: "display: block" %>
    <%= form.collection_select :supplier_id, Supplier.all.order(supplier_name: :asc), :id, :supplier_name %>
  </div>

  <div>
    <%= form.submit "Submit", class: "complete-sale-button" %>
  </div>
<% end %>
